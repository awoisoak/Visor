<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!--tools:context="com.awoisoak.visor.presentation.postlist.PostsListActivity"-->
    <!--android:fitsSystemWindows="true"-->
    <ProgressBar
        android:id="@+id/post_gallery_progress_bar"
        style="?android:attr/progressBarPadding"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        />
    <!--style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"-->


    <android.support.design.widget.AppBarLayout
        android:id="@+id/post_gallery_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|snap"
            >

        </android.support.design.widget.CollapsingToolbarLayout>
        <ImageView
            android:id="@+id/post_gallery_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            app:layout_scrollFlags="scroll"
            android:src="@drawable/map_visited_countries"
            />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/post_gallery_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            tools:listitem="@layout/item_post_list"
            >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
